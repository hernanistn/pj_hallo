<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp">

<androidx.cardview.widget.CardView
    android:id="@+id/cd_Announcement"
    android:layout_width="match_parent"
    android:layout_height="70dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_Announcement"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="start">
        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_Guid_Announcement"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:layout_marginLeft="3dp"
                android:layout_gravity="center"
                android:text="guid exemple"
                android:textStyle="bold"
                android:textSize="@dimen/font_size_Guid">
            </TextView>

            <TextView
                android:id="@+id/txt_Subject_Announcement"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_marginLeft="3dp"
                android:layout_gravity="center"
                android:text="subject exemple"
                android:textSize="@dimen/font_size_others">
            </TextView>

            <TextView
                android:id="@+id/txt_Message_Announcement"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_marginLeft="3dp"
                android:layout_gravity="center"
                android:text="message exemple"
                android:textSize="@dimen/font_size_others">
            </TextView>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>
